{
    "compilerOptions": {
        "target": "es2020", // Set the target ECMAScript version
        "module": "commonjs", // Use CommonJS modules
        "outDir": "dist", // Specify the output directory for compiled JavaScript files
        "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
        "forceConsistentCasingInFileNames": true, // Enforce consistent casing for file names
        "strict": true, // Enable strict type checking
        "noImplicitAny": true, // Prevent implicit any types
        "skipLibCheck": true, // Skip type checking for library files
        "resolveJsonModule": true, // Allow importing JSON files
        "isolatedModules": true // Enable isolated modules (prevent circular references)
    }
 } 